//arrays ou lista
//declaração de arrays
//             0         1          2         3
let cores = ['Azul', 'Amarelo','Vermelho', 'Verde']
console.log(cores)

 ONE

//acessar item da lista
console.log(cores[0])
// Para "chamar" o elemento utilize o índice (números)

//propriedade length
console.log(cores.length) //4
let ultimoElemento = cores[cores.length - 1]//3
console.log(ultimoElemento)

//adicionar elementos
const notas = [10, 6, 8]
//push - adiciona elementos no final do array
notas.push(9)
console.log(notas)

//unshift - adicionar elementos no inicio do array
notas.unshift(5)
console.log(notas)

//deletando itens do array
//pop - deletar o ultimo item do array
notas.pop()
console.log(notas)

//shift - deleta o primeiro item da lista
notas.shift()
console.log(notas)

TWO

//método slice
//slice(início,fim)
const listaDeEstudantes =['João', 'Juliana', 'Denise', 'Ana', 'Maria', 'Luara','Henrique','Marcos','Norman','Daryl']

console.log(listaDeEstudantes)

const sala1 = listaDeEstudantes.slice(0, listaDeEstudantes.length/2) //5
const sala2 = listaDeEstudantes.slice(listaDeEstudantes.length/2)

console.log(sala1)
console.log(sala2)

//splice(início,quantidade,elemento a ser adicionado). Substitui elementos da lista
sala2.splice(2,2,'Lena')
console.log(sala2)

//concatenar listas
//concat
const salaJs = ['Elena','Rick']
const salaPython = ['Lia','Hanna','Lana']

const salasUnidas = salaJs.concat(salaPython)
console.log(salasUnidas)

//lista de listas
const alunos = ['Elena','Rick','Mari','Gabriel']
const media = [10, 5, 6, 8]
const lista =[alunos, media]

console.log(`O aluno no índice 2 se chama ${lista[0][1]}
    e sua média é ${lista[1][1]}`)

//percorrer listas
console.log(lista)
